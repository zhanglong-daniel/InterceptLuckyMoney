<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.damocles.interceptluckymoney.MainActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <android.support.v7.widget.Toolbar
                android:id="@+id/main_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary"
                app:titleTextColor="@color/colorPrimary"/>
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPrimary">
            <TextView
                    android:id="@+id/main_title_txt"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:textSize="18sp"
                    android:textColor="@color/colorTextTitle"
                    android:gravity="center"
                    android:text="@string/app_name"/>
            <ImageButton
                    android:id="@+id/main_title_btn_more"
                    android:layout_width="48dp"
                    android:layout_height="48dp"
                    android:layout_alignParentRight="true"
                    android:scaleType="fitXY"
                    android:background="@drawable/main_title_btn_bg_selector"
                    android:src="@mipmap/ic_more"/>
        </RelativeLayout>
        <View
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:background="@drawable/shadow"/>


        <TextView
                android:layout_width="match_parent"
                android:layout_marginTop="16dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_height="wrap_content"
                android:textColor="#cc000000"
                android:textSize="15sp"
                android:text="使用说明"/>


        <TextView
                android:id="@+id/main_txt_tips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:lineSpacingExtra="12dp"
                android:textColor="#80000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/user_tips"/>
    </LinearLayout>
    <Button
            android:id="@+id/main_btn_open_accessibility_service"
            android:layout_width="216dp"
            android:layout_height="44dp"
            android:layout_marginTop="444dp"
            android:layout_centerHorizontal="true"
            style="?android:attr/borderlessButtonStyle"
            android:textColor="@color/colorTextButton"
            android:textSize="16sp"
            android:text="开启服务"
            android:background="@drawable/main_btn_bg_selector"/>

    <TextView
            android:layout_below="@id/main_btn_open_accessibility_service"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center_horizontal"
            android:textColor="#33000000"
            android:textSize="12sp"
            android:text="本服务仅供娱乐，请提高网速，多攒人品"/>

    <FrameLayout
            android:id="@+id/main_layout_toast"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimaryDark">
        <TextView
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:drawableLeft="@mipmap/ic_ok"
                android:paddingLeft="8dp"
                android:textSize="18sp"
                android:textColor="@color/colorTextTitle"
                android:gravity="center_vertical"
                android:text="抢红包服务已开启"/>
    </FrameLayout>
</RelativeLayout>