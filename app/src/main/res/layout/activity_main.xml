<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:orientation="vertical"
        tools:context="com.damocles.interceptluckymoney.MainActivity">

    <TextView
            android:id="@+id/main_txt_wechat_version"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="当前微信版本："/>

    <TextView
            android:id="@+id/main_txt_state"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="wrap_content"
            android:text="插件运行状态："/>

    <Button
            android:id="@+id/main_btn_open_accessibility_service"
            android:text="开启/关闭抢红包功能"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <TextView
            android:id="@+id/main_txt_tips"
            android:layout_width="match_parent"
            android:layout_marginTop="50dp"
            android:layout_height="wrap_content"
            android:text="@string/user_tips"/>

</LinearLayout>