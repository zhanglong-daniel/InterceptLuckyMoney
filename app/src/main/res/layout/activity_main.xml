<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.damocles.interceptluckymoney.MainActivity">
    <android.support.v7.widget.Toolbar
            android:id="@+id/main_toolbar"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:layout_height="wrap_content"
            app:titleTextColor="#ffffffff"
            app:title="@string/app_name"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:background="@drawable/shadow"/>

    <TextView
            android:id="@+id/main_txt_state"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="12dp"
            android:layout_height="wrap_content"
            android:textColor="#fffff841"
            android:textSize="16sp"
            android:text="服务运行状态：关闭"/>

    <TextView
            android:layout_width="match_parent"
            android:layout_marginTop="16dp"
            android:layout_marginLeft="16dp"
            android:layout_height="wrap_content"
            android:textColor="#ffffffff"
            android:textSize="16sp"
            android:text="使用说明"/>


    <TextView
            android:id="@+id/main_txt_tips"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.0"
            android:textSize="14sp"
            android:lineSpacingExtra="6dp"
            android:textColor="#ccffffff"
            android:layout_margin="16dp"
            android:text="@string/user_tips"/>
    <Button
            android:id="@+id/main_btn_open_accessibility_service"
            android:layout_width="232dp"
            android:layout_height="56dp"
            android:layout_gravity="center_horizontal"
            android:background="@drawable/btn_selector"/>
    <ImageView
            android:id="@+id/image_bottom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@mipmap/img_bottom"/>
</LinearLayout>